---
import { Image } from 'astro:assets';
import HeaderLogo from '../images/code-coral-icon.svg';
---

<header>
  <div class="container">
    <div class="header-logo">
      <a href="/">
        <Image src={HeaderLogo} alt="Code Coral Logo" width="112" height="70" />
      </a>
    </div>
    <nav class="header-nav">
      <a href="#work">Work</a>
      <a href="#contact">Contact</a>
    </nav>
  </div>
</header>

<style>
  header {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px 0;
    line-height: 1;
  }

  header .container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    column-gap: 25px;
  }

  .header-nav {
    font-size: 20px;
    line-height: 1;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    column-gap: 25px;
  }

  @media (width >= 768px) {
    .header-nav {
      font-size: 22px;
      column-gap: 35px;
    }
  }

  .header-nav a {
    color: var(--charcoal);
    text-decoration: none;
  }

  .header-nav a:hover {
    color: var(--orange);
    text-decoration: underline;
  }
</style>